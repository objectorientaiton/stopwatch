<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002870"
    android:backgroundTint="#002870"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:backgroundTint="#FFF79D"
        android:text="Start"
        android:textColor="#002870"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.800" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:backgroundTint="#FFF79D"
        android:text="Stop"
        android:textColor="#002870"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_start"
        app:layout_constraintTop_toTopOf="@id/btn_start"
        app:layout_constraintVertical_bias="0.800" />


    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="false"
        android:text="00:00:00.00"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_yesterday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="false"
        android:text="yesterday"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#9FA0A0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050" />

    <TextView
        android:id="@+id/txt_yes_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="false"
        android:text="00:00:00.00"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#9FA0A0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <ImageButton
        android:id="@+id/btn_calendar"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:background="@drawable/round_box"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.999"
        app:srcCompat="@drawable/calendar_size" />

    <ImageButton
        android:id="@+id/btn_ranking"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:background="@drawable/round_box"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@id/btn_calendar"
        app:layout_constraintEnd_toStartOf="@id/btn_stopwatch"
        app:layout_constraintStart_toEndOf="@id/btn_calendar"
        app:layout_constraintTop_toTopOf="@id/btn_calendar"
        app:layout_constraintVertical_bias="0.999"
        app:srcCompat="@drawable/ranking_size" />

    <ImageButton
        android:id="@+id/btn_stopwatch"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:background="@drawable/round_box"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@id/btn_ranking"
        app:layout_constraintEnd_toStartOf="@id/btn_statistic"
        app:layout_constraintStart_toEndOf="@id/btn_ranking"
        app:layout_constraintTop_toTopOf="@id/btn_ranking"
        app:layout_constraintVertical_bias="0.999"
        app:srcCompat="@drawable/stopwatch_size" />

    <ImageButton
        android:id="@+id/btn_statistic"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:background="@drawable/round_box"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@id/btn_stopwatch"
        app:layout_constraintEnd_toStartOf="@id/btn_account"
        app:layout_constraintStart_toEndOf="@id/btn_stopwatch"
        app:layout_constraintTop_toTopOf="@id/btn_stopwatch"
        app:layout_constraintVertical_bias="0.999"
        app:srcCompat="@drawable/statistic_size" />

    <ImageButton
        android:id="@+id/btn_account"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:background="@drawable/round_box"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@id/btn_statistic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_statistic"
        app:layout_constraintTop_toTopOf="@id/btn_statistic"
        app:layout_constraintVertical_bias="0.999"
        app:srcCompat="@drawable/account_size" />

</androidx.constraintlayout.widget.ConstraintLayout>